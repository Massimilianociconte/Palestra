rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profiles: Users can read/write only their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Config: Public read (for global API key if needed), Admin write only
    match /config/global {
      allow read: if true;
      allow write: if false; // Admin only via Console
    }
    
    // Shared Workouts: 
    // - Create: Any authenticated user can create a shared workout
    // - Read: Publicly readable (so anyone with the link can import it)
    match /shared_workouts/{shareId} {
      allow create: if request.auth != null;
      allow read: if true; 
    }
  }
}
